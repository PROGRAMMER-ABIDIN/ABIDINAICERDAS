{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["**/*.html", "**/*.js"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "server.js",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST"
      }
    },
    {
      "src": "/health",
      "dest": "server.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "status": 200
    }
  ]
}
